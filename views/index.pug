extends partials/layout

block vars
  - const title = 'Amazon Crawl';
  - const pageID = 'index';

block eod
  script
    +loadModule('pages/index.js')

block content
  section.uk-section.uk-light.uk-background-secondary.uk-padding(uk-height-viewport="offset-top: true")
    main.uk-container
      div.uk-flex.uk-flex-column.uk-flex-middle.uk-flex-center
        div.uk-flex.uk-flex-column.uk-flex-middle
          strong ProxyCrawl App
          p.uk-text-light Fetch the products through our web app with Form Post or Ajax
        div.uk-flex(uk-grid='')
          .uk-width-1-2 
            div.uk-flex.uk-flex-column.uk-flex-middle
            form.uk-form-stacked(method="POST" action="/product")
              .uk-margin
                label.uk-form-label(for='form-stacked-text') Server Token
                .uk-form-controls
                  input#form-stacked-text.uk-input(name="token" value="mjXqp8QCJfGZ3SfOHpqI1g" placeholder="ProxyCrawl Token")
                .uk-margin
                  label.uk-form-label(for='form-stacked-text') 
                    | URL 
                    span.uk-text-muted.uk-text-small (Example url: https://www.amazon.com/Philips-Norelco-AT830-46-Frustration/dp/B00JITDVD2 )
                  .uk-form-controls
                    input#form-stacked-text.uk-input(name="url" value="https://www.amazon.com/Philips-Norelco-AT830-46-Frustration/dp/B00JITDVD2" placeholder="ProxyCrawl URL")
                .uk-margin
                  label.uk-form-label(for='form-stacked-text')  
                  .uk-form-controls
              input.uk-button.uk-button-default(type="submit")
          .uk-width-1-2 
            div.uk-flex.uk-flex-column.uk-flex-middle
            form#ajax.uk-form-stacked(method="POST" action="/product")
              .uk-margin
                label.uk-form-label(for='form-stacked-text') Client Token
                .uk-form-controls
                  input#token.uk-input(name="token" value="TKzTGU4ukUMNYQt01VDy5w" placeholder="ProxyCrawl Token")
                .uk-margin
                  label.uk-form-label(for='token') 
                    | URL 
                    span.uk-text-muted.uk-text-small (Example url: https://www.amazon.com/Philips-Norelco-AT830-46-Frustration/dp/B00JITDVD2 )
                  .uk-form-controls
                    input#url.uk-input(name="url" value="https://www.amazon.com/Philips-Norelco-AT830-46-Frustration/dp/B00JITDVD2" placeholder="ProxyCrawl URL")
                .uk-margin
                  label.uk-form-label(for='url')  
                  .uk-form-controls
              input#ajaxSubmitBtn.uk-button.uk-button-default(type="submit" value="Fetch")
              | 
              div#spinner(uk-spinner='' style='display:none;')
